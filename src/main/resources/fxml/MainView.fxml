<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.odev.controller.MainController"
      stylesheets="@../styles/styles.css"
      padding="20">

    <Label text="Smart Task Manager" styleClass="header"/>

    <HBox spacing="10">
        <TextField fx:id="taskInputField" promptText="Enter a new task..." HBox.hgrow="ALWAYS"/>
        <Button text="Add Task" onAction="#handleAddTask"/>
    </HBox>

    <ListView fx:id="taskListView" prefHeight="250"/>
</VBox>

